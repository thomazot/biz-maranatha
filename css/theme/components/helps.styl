.helps
    margin: 20px auto 50px
    padding-top: 20px
    border-top: solid 1px #f7e7ca

    &__container
        margin: 0 auto
        max-width: 100%
        width: 740px

    &__title
        title()

    &__content
        display: none
        padding: 15px

        &, .std
            color: var(--text-color)
            font-weight: regular
            font-size: 14px

    &__tab
        display: flex
        justify-content: flex-start
        align-items: center
        padding: 8px 0
        border-bottom: solid 1px #fcf7ed
        color: var(--text-color)
        font-weight: regular
        font-size: 16px
        cursor: pointer

        .z-less
            display: none

        .ico
            margin-right: 10px
            width: 10px
            height: 10px
            color: var(--primary)

        &.on
            .z-less
                display: block

            .z-more
                display: none

            + .helps__content
                display: block

    &__footer
        a
            display: inline-block
            margin-left: 15px
            padding: 5px 0
            text-transform: uppercase
            font-size: 16px
            font-weiht: regular
