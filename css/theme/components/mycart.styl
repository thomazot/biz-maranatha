.mycart
    .header &
        @media media-min-lg
            margin-left: 35px

    &__header
        a
            display: flex
            align-items: center
            height: 50px
            color: var(--text-color)
            font-weight: light
            font-size: 12px

            @media media-max-lg
                justify-content: center
                width: 50px

        .ico
            margin-right: 8px
            width: 16px
            height: 20px
            color: var(--primary)

            @media media-max-lg
                margin-right: 0

        .text
            @media media-max-lg
                display: none

    &__content
        border: solid 1px rgba(0, 0, 0, .1)
        box-shadow: none

        .title
            color: var(--primary)
            text-align: center
            text-transform: uppercase
            font-weight: regular
            font-size: 16px

    &__item
        border: 0

    &__details
        display: flex
        flex-flow: column nowrap
        justify-content: flex-start
        align-items: flex-end

        dt
            font-weight: regular

        .truncated
            order: -1
            padding: 5px 0
            color: #000
            text-align: right
            font-weight: regular
            font-size: 11px
            opacity: .5

        .price
            color: var(--text-color)
            font-weight: regular
            font-size: 14px

    &__name
        order: -2
        margin-bottom: 0

        a
            color: var(--text-color)
            font-weight: regular
            font-size: 14px

    &__qtd
        color: #000
        font-weight: medium
        font-size: 14px
        opacity: .5

    &__totals
        .title
            display: flex
            align-items: center
            margin: 0
            color: #000
            text-align: right
            text-transform: none
            font-weight: medium
            font-size: 14px
            opacity: .5

            &:before
                flex: 1
                margin-right: 10px
                min-width: 0
                height: 1px
                background: #000
                content: ''
                opacity: .2

        .regular-price
            margin-bottom: 10px
            padding: 5px 0
            border-bottom: solid 1px rgba(0, 0, 0, .1)
            text-align: right

            .label
                display: none

            .price
                color: var(--primary)
                font-weight: bold
                font-size: 14px

        .price-box-avista
            display: none

        .price-box-parcelado
            margin-bottom: 10px
            text-align: center

            &, .num, .value, .juros
                color: var(--text-color)
                font-weight: regular
                font-size: 12px

            .juros
                display: inline

    &__actions
        display: flex
        flex-flow: column nowrap
        margin: 0
        border: 0

        .editar
            padding: 10px 0 0
            color: var(--text-color)
            text-align: center
            font-weight: regular
            font-size: 12px

            &:before
                content: 'Editar Carrinho de Compras'

            span
                display: none

        .finalizar
            display: block
            order: -1
            margin: 0 auto
            width: 190px
            background: var(--button)
            color: var(--button-contrast)
            text-align: center

            &:before
                content: 'Finalizar Compra'

            &:hover
                background: var(--button-hover)
                color: var(--button-contrast-hover)

            span
                display: none