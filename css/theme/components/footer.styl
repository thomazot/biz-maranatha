.footer
    @media media-max-lg
        text-align: center

        .flex--a-center
            justify-content: center

    &-container
        --bg: #f8f8f8

        &
            margin-top: 0
            margin-bottom: 0 !important
            padding-bottom: 20px
            border-top: solid 1px rgba(0, 0, 0, .1)
            background: var(--bg)

    .logo
        img, svg
            @media media-max-lg
                margin: 0 auto

    &__row
        @media media-min-lg
            display: flex
            justify-content: space-between

    &__title
        padding: 20px 0
        color: var(--primary)
        font-weight: bold
        font-size: 14px

    &__description
        padding-top: 25px
        color: var(--text-color)
        font-weight: regular
        font-size: 12px

        @media media-max-lg
            margin: 0 auto
            max-width: 100%
            width: 365px
            text-align: center

    &__abouts
        flex: '0 1 %s' % 265px
        padding-top: 20px
        min-width: 0

    &__navs
        @media media-min-lg
            flex: '0 1 %s' % 215px
            box-sizing: content-box
            margin-top: 60px
            padding: 0 20px

    &__payments
        @media media-min-lg
            flex: '0 1 %s' % 550px
            margin-top: 60px

    &__institucional, &__diferenciais
        display: block
        font-weight: bold
        font-size: 14px

    &__institucional
        margin-top: 15px

    &__diferenciais
        margin-top: 5px

    &__phone
        display: block
        margin-top: 15px
        color: #000
        font-weight: light
        font-size: 14px
        opacity: .5

    &__email
        color: var(--text-color)
        font-weight: semibold
        font-size: 14px

    &__timer
        color: #000
        font-weight: light
        font-size: 14px
        opacity: .5