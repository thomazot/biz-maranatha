.newsletter
    --color: #00b9b5

    .top-head &
        color: var(--secundary-contrast)
        font-weight: regular
        font-size: 12px

        input[type=email], input[type=text], button
            height: 26px
            line-height: 26px

        button
            padding: 0
            border-bottom: solid 1px rgba(255, 255, 255, .2)
            border-radius: 0
            background: none
            color: var(--color)
            font-weight: bold
            font-size: 12px

        input
            &[type=email], &[type=text]
                padding: 0
                border: none
                border-bottom: solid 1px rgba(255, 255, 255, .2)
                border-radius: 0
                background: none
                box-shadow: none
                color: var(--secundary-contrast)
                font-size: 12px

                &::placeholder
                    color: var(--secundary-contrast)
                    font-weight: light
                    font-size: 12px

                &:focus::placeholder
                    color: transparent

        .validation-advice
            right: 10px

            div
                display: none

        &__email, &__name, &__submit
            margin-bottom: -10px
            min-width: 0
            min-width: auto

        &__email, &__name
            flex: 1

        &__name
            padding-right: 10px

        &__email
            padding-right: 0
            padding-left: 10px

        &__submit
            flex: 0 0 auto
            padding-left: 0

        &__form
            flex-wrap: nowrap
            margin: 0
            aling-items: center

        &__text
            flex: 0 0 auto
            margin-bottom: 0

            &.std
                font-size: 14px

        &__loader
            top: calc(50% - 10px)
            left: calc(50% - 10px)
            width: 20px
            height: 20px

    // Footer Head
    .footer-head &
        margin-top: 70px
        border-bottom: solid 1px rgba(0, 0, 0, .1)

        @media media-max-lg
            max-width: 'calc(100% - %s)' % gap

        .input-text
            padding-left: 0
            height: 30px
            border: 0 !important
            background: none
            box-shadow: none
            font-weight: light
            font-size: 12px

        &__form
            margin: 0

        &__text
            margin-bottom: 0
            padding-bottom: 15px

            &.std
                color: var(--text-color)
                text-align: center
                font-weight: light
                font-size: 16px

                strong
                    margin-left: 4px
                    color: var(--primary)
                    font-weight: light

        &__submit
            flex: '0 0 %s' % 65px
            min-width: 0

        &__email
            flex: 1
            min-width: 0

        &__btn
            padding: 0
            height: 30px
            background: none
            box-shadow: none
            color: var(--primary)
            font-weight: bold
            font-size: 12px

            &:hover
                background: none
                color: var(--secundary)