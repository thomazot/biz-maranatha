.stores
    margin-bottom: 50px

    &__container
        display: flex

    &__header
        padding: 35px 30px
        background: var(--primary)
        color: var(--primary-contrast)

        @media media-min-lg
            flex: 1
            min-width: 0

        .ico
            width: 38px
            height: 52px

        h4
            margin-top: 25px
            margin-bottom: 0
            text-transform: uppercase
            font-weight: medium
            font-size: 12px
            line-height: 1

        h3
            font-weight: regular
            font-size: 36px
            line-height: 1

    &__main
        flex: '0 1 %s' % 775px